<% include ../header.ejs %>

<div class="caixa container-fluid">
	<div class="col-12 txt-center">
		<h3>Listagem de Usu√°rios</h3>
	</div>
	<div class="row">
		<div class="col-12">
			<table class="table table-striped table-hover">
				<thead>
					<th>
						<td>ID</td>
						<td>Nome</td>
						<td>Sobrenome</td>
						<td></td>
					</th>
				</thead>
				<tbody>
					<% lista.forEach( item => { %>
					<tr>
						<td><%= item.idUsuario %></td>
						<td><%= item.nome %></td>
						<td><%= item.sobrenome %></td>
						<td>
							<a href="/usuario-detalhes?idUsuario=<%= item.idUsuario %>">Detalhes</a>
						</td>
					</tr>
					<% }); %>
				</tbody>
			</table>
		</div>
	</div>
</div>

